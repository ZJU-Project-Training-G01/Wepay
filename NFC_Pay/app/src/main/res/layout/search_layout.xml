<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/good_img"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@id/good_img"
        android:layout_toRightOf="@id/good_img"
        android:maxLines="1"
        android:text="美的电饼铛 JHN30F 双面加热"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥500"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/good_name"
        android:layout_alignLeft="@+id/good_name"
        android:layout_alignStart="@+id/good_name"
        android:layout_marginTop="11dp" />


